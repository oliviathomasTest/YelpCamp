<%- include("../partials/header") %>
<h1 style="margin-top: 70px;padding-bottom: 20px;" class="text-center">Add a new Comment for <%= campground.name %></h1>
<form action="/campgrounds/<%= campground._id%>/comments" method="POST">
<div class="row">
	<div style="width:30%; margin: 0 auto;">
		<div class="form-group">
	<input  class="form-control" type="text" name="comment[text]" placeholder="text">
	</div>
	<div class="form-group">
	<button class="btn btn-primary btn-block">Submit</button>
	</div>
	<a href="/campgrounds/<%= campground._id %>">Go back</a>
    </div>
</div>
</form>

<%- include("../partials/footer") %>