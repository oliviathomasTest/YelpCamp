
<%- include ("../partials/header") %>
<div class="container" style="padding-top: 100px;">
	<div class="row">
		<div class="col-md-3">
			<p class="lead" >Yelp Camp</p>
			<div class="list-group">
				<li class="list-group-item">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">

			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h5 class="pull-right" style="padding-top: 15px;">$6.00/NIGHT</h5>
					<a href=""><h2><%= campground.name %></h2></a>
					<p><%= campground.description %></p>
					<h4><em>Submitted By <%= campground.author.username %> </em></h4>
					<a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
				</div>
			</div>

			<div class="well">

            <div class="text-right">
            <a  class="btn btn-success " href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
            </div>
            <hr>
            <% campground.comments.forEach(function(comment){ %>
	        <div class="row">
	        	<div class="col-md-12">
	        		<h5 class="pull-right">10 days ago</h5>
	        		<h4><%= comment.author.username %></h4> 
	  
	        		<p><%= comment.text %><p>
	        	</div>
	        
	        </div>
            <% }); %>
           </div>

		</div>
	</div>
